<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:bind="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="login"
            type="com.gsww.androidnma.model.Login" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <include layout="@layout/net_tips" bind:login="@{login}" />
        <include layout="@layout/guide" bind:login="@{login}" />
        <ImageView
            android:id="@+id/login_start_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/bg_start"
            android:contentDescription="@string/img_tips"
            android:scaleType="fitCenter"
            android:visibility="gone" />
    </LinearLayout>
</layout>